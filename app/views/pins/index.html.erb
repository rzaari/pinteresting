<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th width="30%">Image</th>
      <th width="30%">User Email</th>
      <th width="70%">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) %></td>
        <td><%= pin.user_id %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin,class: "btn btn-default" %></td>
        
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default" %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path,class:"btn btn-primary btn-lg" %>
<% end %>
